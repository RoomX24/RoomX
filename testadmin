<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Admin</title>
  <style>
    body {
      font-family: Arial;
      padding: 20px;
    }
    label, textarea, input, button {
      display: block;
      margin-top: 10px;
    }
    textarea {
      width: 100%;
      height: 100px;
      resize: vertical;
      font-size: 1em;
    }
  </style>
</head>
<body>

  <h2>Óra beállítása</h2>
  <label>Óra: <input type="number" id="hours" min="0" value="1"></label>
  <label>Perc: <input type="number" id="minutes" min="0" value="0"></label>
  <button onclick="startTimer()">Indítás</button>
  <button onclick="pauseResumeTimer()">Szünet / Folytatás</button>
  <button onclick="stopTimer()">Leállítás</button>

  <h2>Tipp küldése</h2>
  <textarea id="tipInput" placeholder="Írd ide a tippet..."></textarea>
  <button onclick="sendTip()">Tipp küldése</button>

  <div id="status"></div>

  <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
  <script>
    const socket = io("http://localhost:3000");

    let timerInterval;
    let totalSeconds = 0;
    let isPaused = false;

    function updateClients() {
      const min = Math.floor(totalSeconds / 60);
      const sec = totalSeconds % 60;
      const formatted = `${String(min).padStart(2, '0')}:${String(sec).padStart(2, '0')}`;
      socket.emit("updateTime", formatted);
    }

    function startTimer() {
      const hours = parseInt(document.getElementById("hours").value) || 0;
      const minutes = parseInt(document.getElementById("minutes").value) || 0;
      totalSeconds = (hours * 60 + minutes) * 60;
      clearInterval(timerInterval);
      isPaused = false;

      timerInterval = setInterval(() => {
        if (!isPaused && totalSeconds > 0) {
          totalSeconds--;
          updateClients();
        }
      }, 1000);

      updateClients();
    }

    function pauseResumeTimer() {
      if (timerInterval) {
        isPaused = !isPaused;
      }
    }

    function stopTimer() {
      clearInterval(timerInterval);
      timerInterval = null;
      totalSeconds = 0;
      isPaused = false;
      socket.emit("updateTime", "00:00");
    }

    function sendTip() {
      const tipText = document.getElementById("tipInput").value.trim();
      if (tipText) {
        socket.emit("newTip", tipText);
        document.getElementById("tipInput").value = '';
      }
    }
  </script>
</body>
</html>
